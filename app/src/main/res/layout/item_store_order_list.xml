<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOrderId_ItemStoreList"
            style="@style/myText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/material_dynamic_primary99"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:text=""
            tools:text="Name:1234567890" />

        <TextView
            android:id="@+id/tvTime_ItemStoreList"
            style="@style/myText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_dynamic_primary99"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:text=""
            tools:text="time" />

        <TextView
            android:id="@+id/tvName_ItemStoreList"
            style="@style/myText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            tools:text="name" />

        <TextView
            android:id="@+id/tvStatus_ItemStoreList"
            style="@style/myText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue"
            tools:text="status" />

    </LinearLayout>

</androidx.cardview.widget.CardView>