<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName_MarketList"
        style="@style/myText"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:text=""
        android:layout_marginTop="1dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name" />

    <TextView
        android:id="@+id/tvPrice_MarketList"
        style="@style/myText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text=""
        tools:text="$1234567"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName_MarketList" />

    <EditText
        android:id="@+id/etCount_MarketList"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:text="@string/countInitial"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibSub_MarketList"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice_MarketList"
        app:layout_constraintVertical_bias="0" />


    <ImageButton
        android:id="@+id/ibSub_MarketList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="5dp"
        android:src="@drawable/baseline_remove_black_36"
        app:layout_constraintBottom_toBottomOf="@+id/etCount_MarketList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etCount_MarketList" />

    <ImageButton
        android:id="@+id/ibAdd_MarketList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/baseline_add_black_36"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/etCount_MarketList"
        app:layout_constraintStart_toEndOf="@+id/etCount_MarketList"
        app:layout_constraintTop_toTopOf="@+id/etCount_MarketList" />

</androidx.constraintlayout.widget.ConstraintLayout>